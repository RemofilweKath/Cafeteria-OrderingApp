@model CafeteriaOrderingApp.Models.Deposit

@{
    ViewData["Title"] = "Deposit";
}
<h1>Deposit</h1>

<form asp-action="Deposit">
    <div>
        <label asp-for="EmployeeNumber"></label>
        <input asp-for="EmployeeNumber" class="form-control" />
        <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Amount">R</label>
        <input asp-for="Amount" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Deposit</button>
</form>

<a asp-action="Index">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
